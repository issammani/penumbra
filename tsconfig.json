{
  "compileOnSave": true,
  "compilerOptions": {
    "incremental": true,
    "target": "esnext",
    "module": "commonjs",
    "lib": ["esnext", "dom", "es2020"],
    "allowJs": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": false,
    "esModuleInterop": true,
    "tsBuildInfoFile": "dist/.tsbuildinfo",
    "baseUrl": ".",
    "outDir": "ts-build",
    "types": ["node"],
    "composite": false,
    "moduleResolution": "node",
    "strict": true,
    "typeRoots": [
      "src/@types/worker-loader/index.d.ts",
      "src/@types/streamsaver/index.d.ts",
      "src/@types/conflux/index.d.ts",
      "src/@types/typedarray-to-buffer/index.d.ts",
      "src/@types/crypto-browserify/index.d.ts"
    ]
  },
  "include": ["src/**/*", "!src/tests"],
  "exclude": ["node_modules", "dist"]
}
